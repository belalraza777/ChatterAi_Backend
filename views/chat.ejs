<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .chat-box {
            height: 70vh;
            overflow-y: auto;
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
        }
        .user-msg {
            background: #e3f2fd;
            padding: 8px;
            border-radius: 5px;
            margin-bottom: 5px;
        }
        .bot-msg {
            background: #f5f5f5;
            padding: 8px;
            border-radius: 5px;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <h2>Chat with AI</h2>
        
        <!-- Chat Threads Sidebar -->
        <div class="row">
            <div class="col-md-3">
                <h4>Your Chats</h4>
                <div class="list-group">
                    <% threads.forEach(thread => { %>
                        <a href="/chat/<%= thread._id %>" 
                           class="list-group-item <%= currentThread && thread._id.equals(currentThread._id) ? 'active' : '' %>">
                            <%= thread.title %>
                        </a>
                    <% }); %>
                </div>
                <form action="/chat/new" method="POST" class="mt-3">
                    <button type="submit" class="btn btn-primary btn-sm">+ New Chat</button>
                </form>
            </div>
            
            <!-- Main Chat Area -->
            <div class="col-md-9">
                <% if (currentThread) { %>
                    <div class="chat-box" id="chatBox">
                        <% messages.forEach(msg => { %>
                            <div class="<%= msg.role === 'user' ? 'user-msg' : 'bot-msg' %>">
                                <strong><%= msg.role === 'user' ? 'You' : 'AI' %>:</strong> 
                                <%= msg.content %>
                            </div>
                        <% }); %>
                    </div>
                    
                    <form id="chatForm" action="/chat/<%= currentThread._id %>/message" method="POST">
                        <div class="input-group">
                            <input type="text" name="userMessage" class="form-control" placeholder="Type your message...">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </form>
                <% } else { %>
                    <div class="alert alert-info">
                        Select a chat or create a new one to start messaging
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Auto-scroll to bottom
        const chatBox = document.getElementById('chatBox');
        if (chatBox) chatBox.scrollTop = chatBox.scrollHeight;
        
        // AJAX form submission
        const form = document.getElementById('chatForm');
        if (form) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const input = form.querySelector('input');
                const message = input.value.trim();
                if (!message) return;
                
                // Add user message immediately 
                chatBox.innerHTML += `
                    <div class="user-msg">
                        <strong>You:</strong> ${message}
                    </div>
                `;
                input.value = '';
                chatBox.scrollTop = chatBox.scrollHeight;
                
                // Send to server
                const formData = new FormData(form);
                try {
                    const response = await fetch(form.action, {
                        method: 'POST',
                        body: new URLSearchParams(formData)
                    });
                    const reply = await response.text();
                    
                    // Add bot reply
                    chatBox.innerHTML += `
                        <div class="bot-msg">
                            <strong>AI:</strong> ${reply}
                        </div>
                    `;
                    chatBox.scrollTop = chatBox.scrollHeight;
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to send message');
                }
            });
        }
    </script>
</body>
</html>